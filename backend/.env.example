# Application Configuration
APP_NAME="Albus Recon"
APP_VERSION="1.0.0"
DEBUG=false
SECRET_KEY="your-super-secret-key-change-this-in-production"

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/albus_recon"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Configuration
JWT_SECRET_KEY="your-jwt-secret-key-change-this-in-production"
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days in seconds
JWT_ALGORITHM="HS256"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="Content-Type,Authorization,X-Requested-With"

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# File Upload
UPLOAD_FOLDER="uploads"
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600  # seconds

# External API Keys (Optional)
SHODAN_API_KEY=""
DNSDUMPSTER_API_KEY=""

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json or text
